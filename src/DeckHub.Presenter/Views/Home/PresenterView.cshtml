@model PresenterViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-12">
        <h3>Questions</h3>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div id="questions"></div>
    </div>
</div>

@section Scripts
{
    <script>
        window.DeckHub = window.DeckHub || {};
        window.DeckHub.show = '@Model.Place/@Model.Presenter/@Model.Slug';
        window.DeckHub.slide = 'all';
    </script>
    <environment include="Development">
        <script src="~/lib/@@reactivex/rxjs/global/Rx.js"></script>
        <script src="~/lib/vue/vue.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://unpkg.com/@@reactivex/rxjs@5.5.9/dist/global/Rx.min.js"
                asp-fallback-src="~/lib/@@reactivex/rxjs/global/Rx.min.js"
                asp-fallback-test="window.Rx"
                crossorigin="anonymous"
                integrity="sha384-LYPfyX2q+SNly4K2wqjt+demgf0pBMCCd0C14kY9SIoEERaTRdmoknW+yZYZ5WPV">
        </script>
        <script src="https://unpkg.com/vue@2.5.16/dist/vue.min.js"
                asp-fallback-src="~/lib/vue/vue.min.js"
                asp-fallback-test="window.Vue"
                crossorigin="anonymous"
                integrity="sha384-DwsLA0O/He+RjlS7pFkqEHfsCgdTMU+nSuUq/qkxvKSTED+s4vRttKEZtf4xTW1+"></script>
    </environment>
    <script src="/hub/signalr.js"></script>
    <script src="/hub/hub.js"></script>
    <script src="/questions/questions.js"></script>
}
